{
  "dashboard": {
    "title": "JVM Metrics - Benchmark Comparison",
    "tags": ["benchmark", "jvm", "performance"],
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Heap Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=~\"variante.*\", area=\"heap\"} / 1024 / 1024",
            "legendFormat": "{{job}} - Heap Used (MB)",
            "refId": "A"
          },
          {
            "expr": "jvm_memory_max_bytes{job=~\"variante.*\", area=\"heap\"} / 1024 / 1024",
            "legendFormat": "{{job}} - Heap Max (MB)",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "CPU Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "process_cpu_usage{job=~\"variante.*\"} * 100",
            "legendFormat": "{{job}} - CPU %",
            "refId": "A"
          },
          {
            "expr": "system_cpu_usage{job=~\"variante.*\"} * 100",
            "legendFormat": "{{job}} - System CPU %",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 3,
        "title": "GC Pause Time",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_sum{job=~\"variante.*\"}[1m]) * 1000",
            "legendFormat": "{{job}} - {{action}} - GC Time (ms/s)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ms",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 4,
        "title": "GC Collections per Second",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(jvm_gc_pause_seconds_count{job=~\"variante.*\"}[1m])",
            "legendFormat": "{{job}} - {{action}} - Collections/s",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 5,
        "title": "Thread Count",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "jvm_threads_current{job=~\"variante.*\"}",
            "legendFormat": "{{job}} - Threads",
            "refId": "A"
          },
          {
            "expr": "jvm_threads_peak{job=~\"variante.*\"}",
            "legendFormat": "{{job}} - Peak Threads",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 6,
        "title": "Non-Heap Memory Usage",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{job=~\"variante.*\", area=\"nonheap\"} / 1024 / 1024",
            "legendFormat": "{{job}} - Non-Heap Used (MB)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decmbytes",
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 7,
        "title": "Heap Usage Percentage",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "(jvm_memory_used_bytes{job=~\"variante.*\", area=\"heap\"} / jvm_memory_max_bytes{job=~\"variante.*\", area=\"heap\"}) * 100",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 70, "color": "yellow"},
                {"value": 85, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Total GC Collections",
        "type": "stat",
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24},
        "targets": [
          {
            "expr": "jvm_gc_pause_seconds_count{job=~\"variante.*\"}",
            "legendFormat": "{{job}} - {{action}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 100, "color": "yellow"},
                {"value": 500, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Classes Loaded",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24},
        "targets": [
          {
            "expr": "jvm_classes_loaded{job=~\"variante.*\"}",
            "legendFormat": "{{job}} - Classes",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {"mode": "palette-classic"}
          }
        }
      }
    ]
  },
  "overwrite": false
}
